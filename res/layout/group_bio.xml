<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_bio"
    android:layout_width="fill_parent"
    android:layout_height="80dip" 
    android:background="#FFFFFF">

    <!--
              >ImageView android:id="@+id/ImageView01" android:src="@drawable/icon"
                android:layout_height="40dip" android:layout_width="40dip" android:layout_marginLeft="40dip"></ImageView
    -->

    <TextView
        android:id="@+id/evento_name"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip"
        android:paddingBottom="5dip"
        android:text="EVENTO"
        android:textSize="17dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/evento_detail"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignBottom="@+id/evento_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:text="EVE" />

</RelativeLayout>